    <title>वैज्ञानिक कैलकुलेटर</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            padding: 20px;
        }

        .calculator {
            background-color: #1e1e2e;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            width: 400px;
            overflow: hidden;
            color: white;
        }

        .display {
            background-color: #2d3047;
            padding: 20px;
            text-align: right;
            border-bottom: 1px solid #3d4163;
        }

        .display-expression {
            font-size: 18px;
            min-height: 27px;
            color: #a9b1d6;
            margin-bottom: 10px;
            word-wrap: break-word;
        }

        .display-result {
            font-size: 32px;
            font-weight: bold;
            min-height: 40px;
            color: #ffffff;
        }

        .memory-indicator {
            font-size: 12px;
            color: #7dcfff;
            margin-top: 5px;
            text-align: left;
        }

        .controls {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 10px;
            padding: 20px;
        }

        button {
            border: none;
            border-radius: 10px;
            padding: 15px 0;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.2s ease;
            color: white;
        }

        button:active {
            transform: scale(0.95);
        }

        .number {
            background-color: #3d4163;
        }

        .number:hover {
            background-color: #51557e;
        }

        .operator {
            background-color: #7aa2f7;
        }

