            background-color: #89b4fa;
        }

        .function {
            background-color: #bb9af7;
        }

        .function:hover {
            background-color: #c8aefa;
        }

        .equals {
            background-color: #f7768e;
            grid-column: span 2;
        }

        .equals:hover {
            background-color: #fa8a9e;
        }

        .clear {
            background-color: #ff9e64;
        }

        .clear:hover {
            background-color: #ffb183;
        }

        .memory {
            background-color: #73daca;
            color: #1e1e2e;
        }

        .memory:hover {
            background-color: #8ae0d2;
        }

        .toggle {
            background-color: #e0af68;
            color: #1e1e2e;
        }

